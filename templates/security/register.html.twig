{% extends 'security/base.html.twig' %}

{% block title %}Registracija{% endblock %}

{% block form %}
    {{ form_start(registrationForm, {'attr': {'class': 'form-signin'}, 'method':'POST'}) }}

		{# {% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %} #}
		<div class="form-label-group">
            {{ form_widget(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'El. Paštas'}})}}
            {{ form_label(registrationForm.email, 'El. Paštas')}}
            {{ form_errors(registrationForm.email) }}
		</div>

		<div class="form-label-group">
            {{ form_widget(registrationForm.plainPassword, {'attr': {'class': 'form-control', 'placeholder': 'Slaptažodis'}})}}
            {{ form_label(registrationForm.plainPassword, 'Slaptažodis')}}
            {{ form_errors(registrationForm.plainPassword) }}
		</div>

		{# <div class="custom-control custom-checkbox mb-3">
            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'custom-control-input'}})}}
            {{ form_label(registrationForm.agreeTerms)}}
		</div> #}

		<button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Registruotis</button>
		<hr class="my-4">
		<a href="{{path('app_login')}}" class="btn btn-lg btn-secondary btn-block text-uppercase">
			Prisijungimas</a>
    {{ form_end(registrationForm) }}
{% endblock %}
